{
    "manifest_version": 3,
    "name": "A 20-20-20 Eye Care Timer",
    "version": "1.0.0",
    "description": "A 20-20-20 Eye Care Timer",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "20-20-20 Eye Care Timer",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options/options.html"
}